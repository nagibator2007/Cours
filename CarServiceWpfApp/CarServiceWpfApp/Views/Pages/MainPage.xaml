<Page x:Class="CarServiceWpfApp.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarServiceWpfApp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>


        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            --><!-- Ширина колонки для сайдбара --><!--
            <ColumnDefinition/>
            --><!-- Оставшаяся ширина для контента --><!--
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="LightGray">
            <StackPanel Margin="0,20,0,0">
                --><!-- Здесь размещаете логотип --><!--
                <TextBlock Text="Автосервиском" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18"/>
            </StackPanel>

            <StackPanel Margin="0,50,0,0">
                --><!-- Здесь размещаете навигационные элементы --><!--
                <Button Content="Заказы-наряды" Click="OrdersButton_Click"/>
                <Button Content="Склад" Click="WarehouseButton_Click"/>
                <Button Content="Отчёты" Click="ReportsButton_Click"/>
                
            </StackPanel>
        </StackPanel>
        
        --><!--Кнопка настроек--><!--
        <Button Content="Настройки" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="SettingsButton_Click"/>-->

        <Viewbox>
            <StackPanel>
                <TextBlock Text="Добрый день!"  x:Name="NameTextBlock" FontSize="30"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="GreetingTextBlock"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="Здесь можно посмотреть всю доступную информацию" x:Name="RoleDescriptionTextBlock"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Viewbox>

    </Grid>
</Page>
